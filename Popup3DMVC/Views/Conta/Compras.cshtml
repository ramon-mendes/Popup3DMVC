@model IEnumerable<PedidoModel>
@{
    Layout = "_LayoutConta";
    ViewData["Title"] = "Minhas Compras";
}
@section head {
	<style>
		a.order-item
		{
			display: block;
			color: inherit;
			border-radius: 4px;
			background: #d5d5d5;
			padding: 20px;
			margin-bottom: 20px;
			transition: all linear 200ms;
		}
		a.order-item:hover
		{
			background: #c2c2c2;
		}
		.code { color: #6e6e6e; font-size: 18px; }
	</style>
}

<h1>Minhas Compras</h1>

<div class="order-list">
	@if(Model.Count()==0)
	{
		<div class="alert alert-info">Você não possui nenhuma compra.</div>
	}
	@foreach(var item in Model)
	{
		<a href="/Conta/Pedido/@item.Id" class="order-item">
			<div class="code mb-1">Pedido <strong>@item.Id</strong> feito em <strong>@item.dt.ToShortDateString()</strong></div>
			<div class="mb-3">Impressão 3D de <strong>@item.Upload.filename</strong></div>
			<div class="status">
				<h4 class="mb-0"><span class="badge badge-info"><small>Status:</small>  @item.status.StatusString()</span></h4>
			</div>
		</a>
	}
</div>